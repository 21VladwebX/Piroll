.container-project
	width: 100%;
	height: 750px;
	
.need
	width: 670px;
	height: 750px
	margin: 0 auto;
	
	&-form
		padding-top: 100px;
		text-align: center;
		
		&__title
			font-size: 20px;
			font-weight: 700;
			color: black;
			
		&__text
			margin: 40px 0;
			color: text_grey;
		

		&__row
			width: 100%;
			
			input
				background-color: white;
				width: calc(50% - 21px);
		
		input[name="title"]
			width: calc(100% - 18px);
		
		textarea
			width: calc(100% - 18px);
			height: 170px;
		
		input,textarea
			margin: 15px 0;
			border: none;	
			padding: 9px;
			color: text_grey;
		
		button
			margin-top: 15px;
			text-transform: uppercase;
			color: white;
			padding: 24px 35px;
			background-color: turquoise;
			border: none;
			
			&:hover
				cursor: pointer;
			