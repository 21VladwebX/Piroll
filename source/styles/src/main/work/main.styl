.works
	display: grid;
	grid-template-rows: repeat(2,300px);
	grid-template-columns: 100%;
	
	&-row1
		display:grid;
		grid-template-rows: 100%;
		grid-template-columns: repeat(4,25%);
		perspective: 1000px;
		
		&__elem
			position: relative;
			width:100%;
			height: 100%;
			transition: 0.6s;
			transform-style: preserve-3d;
			&:hover
					transform: rotateY(180deg);
			&-static
				width:100%;
				height: 100%;
				position: absolute;
				transition: all 2s				// transform-origin: 0px 0px;
				transform: rotateY(0deg);
				
				
			&-static , &-hover
				backface-visibility: hidden;
				position: absolute;
				top: 0;
				left: 0
				transition: all 6s;	
			&-hover
				width:100%;
				height: 100%;
				display: flex;
				// z-index: 1;
				justify-items: center;
				align-items: center;
				transform: rotateY(180deg);
				img
					margin: 0 auto;

					
		&-hover
			transform: rotateY(180deg);

			

				

	&-row2
