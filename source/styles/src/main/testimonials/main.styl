.container-testimonials
	background-color: turquoise;
	height: 500px;
	width: 100%;
.testimonials
	color: white;
	width: 100%;
	height: 500px;
	overflow: hidden;
	&-slider
		width: 100%;
		height: 500px;
		position: relative;
		&__slide
			font-size: 16px;
			width: 100%;
			height: 500px;
			display: flex;
			justify-content: center;
			align-items: center;
			.text
				text-align: center;
				max-width: 800px;
				font-size: 20px;
				
				.author
					font-size: 12px;
					padding-top: 50px;
					text-transform: uppercase;
	
