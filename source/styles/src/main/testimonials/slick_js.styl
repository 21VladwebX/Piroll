.slick-track
	display: flex;
	
.my-dots
	display: block;
	width: 100px;
	margin-bottom: 50px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	position: absolute;
	left: calc(50% - 50px);
	bottom: 0;
	li
		border-radius: 50%;
		list-style: none;
		
		button
			padding: 5px;
			font-size: 0;
			line-height: 0;
			background-color: transparent;
			outline: none;
			border: none;
			
		button:after
			display: block;
			background-color: white;
			border: none;
			border-radius: 25px;
			width: 10px;
			height: 10px;
			border: none;
			content: '.';
			color: white;
			transform: scale(0.5);
			transition: all .3s;
		button:hover,
		button:focus	
			&:after 
				transform: scale(1);

	.slick-active	
		button
			&:after 
				transform: scale(1);
			
				